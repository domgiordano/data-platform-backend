{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Silver Document Schema",
  "description": "Schema for cleaned and standardized documents in silver layer",
  "type": "object",
  "required": [
    "document_id",
    "title",
    "content",
    "language",
    "created_timestamp",
    "processed_timestamp"
  ],
  "properties": {
    "document_id": {
      "type": "string",
      "description": "Unique identifier (same as bronze)"
    },
    "title": {
      "type": "string",
      "description": "Extracted or cleaned title",
      "minLength": 1
    },
    "content": {
      "type": "string",
      "description": "Cleaned and normalized text content",
      "minLength": 1
    },
    "summary": {
      "type": "string",
      "description": "Auto-generated summary"
    },
    "language": {
      "type": "string",
      "description": "Detected language code (ISO 639-1)",
      "pattern": "^[a-z]{2}$",
      "examples": ["en", "es", "fr"]
    },
    "word_count": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of words in content"
    },
    "char_count": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of characters"
    },
    "source_metadata": {
      "type": "object",
      "properties": {
        "source_system": { "type": "string" },
        "source_url": { "type": "string", "format": "uri" },
        "author": { "type": "string" },
        "original_filename": { "type": "string" }
      }
    },
    "entities": {
      "type": "array",
      "description": "Named entities extracted from text",
      "items": {
        "type": "object",
        "properties": {
          "text": { "type": "string" },
          "type": {
            "type": "string",
            "enum": [
              "PERSON",
              "ORGANIZATION",
              "LOCATION",
              "DATE",
              "PRODUCT",
              "EVENT"
            ]
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          }
        }
      }
    },
    "key_phrases": {
      "type": "array",
      "description": "Key phrases extracted from text",
      "items": { "type": "string" }
    },
    "sentiment": {
      "type": "object",
      "description": "Sentiment analysis results",
      "properties": {
        "label": {
          "type": "string",
          "enum": ["positive", "negative", "neutral", "mixed"]
        },
        "score": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      }
    },
    "categories": {
      "type": "array",
      "description": "Document categories/classifications",
      "items": { "type": "string" }
    },
    "tags": {
      "type": "array",
      "description": "Tags for organization",
      "items": { "type": "string" }
    },
    "data_quality": {
      "type": "object",
      "properties": {
        "completeness_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "validity_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "quality_issues": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "created_timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Original creation/publication date"
    },
    "processed_timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "When silver layer processing completed"
    },
    "schema_version": {
      "type": "string",
      "const": "1.0"
    }
  }
}
